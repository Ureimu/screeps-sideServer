{
    "compilerOptions": {
        "module": "esnext",
        "lib": [
            "esnext"
        ],
        "target": "es2017",
        "moduleResolution": "Node",
        "outDir": "dist",
        "baseUrl": "src/",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowUnreachableCode": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "declaration": true,
        "resolveJsonModule": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
